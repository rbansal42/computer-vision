# Importing required packages

import cv2
print("Successfully imported")


# Reading image

OG_img = cv2.imread("og_img.jpeg")
print("Image read successfully")

# Viewing imported image
print("Rendering Image")
cv2.imshow("img", OG_img)
cv2.waitKey(0)
cv2.destroyAllWindows() 


# Converting image to grayscale
gray_image = cv2.cvtColor(OG_img, cv2.COLOR_BGR2GRAY)
print("Converted Successfully")

# Saving grayscale image
# cv2.imwrite("gray_img.jpg", gray_image)
# print("Saved Successfully")

# Viewing grayscale image
print("Rendering Image")
cv2_imshow(gray_image)


#drawing a line on the image

lined_img = cv2.line(OG_img, (0,0), (255,255), (0,0,255), 5) #(srcImg, start, end, color, thickness)
print("Line Drawn Successfully")


cv2_imshow(lined_img)



# drawing an arrow line on the img

arrowed_line = cv2.arrowedLine(OG_img, (0,255), (255,255), (255,0,0), 6)
cv2_imshow(arrowed_line)


#rectangle
rectangle_img = cv2.rectangle(OG_img, (384,0), (510,128), (0,255,0), 1)
cv2_imshow(rectangle_img)


#circle
circle_img = cv2.circle(OG_img,(447,63),63,(0,255,0), -1)
cv2_imshow(circle_img)


#text on the image
font = cv2.FONT_HERSHEY_COMPLEX
text_img = cv2.putText(OG_img,'Sushant',(10,50),font,4,(255,255,0),10,cv2.LINE_AA)
#10,50 is the location
#4 is the font size
#255,255,0 is color
#10 is the font thickness


cv2_imshow(text_img)
